<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <VBox fx:id="container" StackPane.alignment="CENTER" VBox.vgrow="ALWAYS">
           <Button fx:id="exportButton" text="Export to PNG" />
           <BarChart fx:id="chart" layoutX="40.0" title="%key.main.menu.charts.total.by.hour">
               <xAxis>
                   <CategoryAxis label="%key.main.menu.charts.total.by.hour" side="BOTTOM" fx:id="xAxis"/>
               </xAxis>
               <yAxis>
                   <NumberAxis fx:id="yAxis" label="%key.total.qso" side="LEFT"/>
               </yAxis>
           </BarChart>
       </VBox>
   </children>
</StackPane>
