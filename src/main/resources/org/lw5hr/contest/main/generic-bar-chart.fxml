<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<?import javafx.scene.layout.StackPane?>
<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="container" StackPane.alignment="CENTER" VBox.vgrow="ALWAYS">
        <BarChart fx:id="chart" layoutX="40.0" title="%key.main.menu.charts.total.by.hour">
        <xAxis>
            <CategoryAxis fx:id="xAxis" label="%key.main.menu.charts.total.by.hour" side="BOTTOM"/>
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Total QSO" side="LEFT"/>
        </yAxis>
    </BarChart>
</VBox>
</StackPane>